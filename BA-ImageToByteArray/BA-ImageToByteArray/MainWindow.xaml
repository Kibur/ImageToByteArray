<Window x:Class="BA_ImageToByteArray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="btnBrowse" Content="Browse" Width="80" Height="30" Margin="10" Click="btnBrowse_Click"/>
            <TextBlock Name="txbPath" Text="No image loaded" Margin="10, 15, 0, 0"/>
        </WrapPanel>
        <TextBox IsReadOnly="True" Name="txtOutput" Grid.Row="1" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
